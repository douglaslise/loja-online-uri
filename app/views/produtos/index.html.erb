<h1>Listing produtos</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Descricao</th>
    <th>Preco</th>
    <th>Imagem</th>
    <th>Tipo imagem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.titulo %></td>
    <td><%= produto.descricao %></td>
    <td><%= produto.preco %></td>
    <td><%= image_tag url_for(:action => :imagem,
      :id => produto.id) %></td>
    <td><%= produto.tipo_imagem %></td>
    <td><%= link_to 'Show', produto %></td>
    <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
    <td><%= link_to 'Destroy', produto, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Produto', new_produto_path %>
