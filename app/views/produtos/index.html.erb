<h1>Listagem de produtos</h1>

<table>
  <tr>
    <th>Título</th>
    <th>Descrição</th>
    <th>Preço</th>
    <th>Imagem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.titulo %></td>
    <td><%= produto.descricao %></td>
    <td><%= produto.preco.reais_contabeis %></td>
    <td><%= image_tag url_for(:action => :imagem,
      :id => produto.id) %></td>
    <td><%= link_to 'Exibir', produto %></td>
    <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
    <td><%= link_to 'Excluir', produto, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

